generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== ENUMS ====================

enum Role {
  ADMIN
  STAFF
}

enum Category {
  entrantes
  principales
  postres
  bebidas
}

enum MessageStatus {
  PENDING
  READ
  REPLIED
  ARCHIVED
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

// ==================== MODELS ====================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dish {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Decimal  @db.Decimal(10, 2)
  image       String
  category    Category
  featured    Boolean  @default(false)
  available   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactMessage {
  id        String        @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  status    MessageStatus @default(PENDING)
  createdAt DateTime      @default(now())
  readAt    DateTime?
}

model Reservation {
  id          String            @id @default(cuid())
  name        String
  email       String
  phone       String
  date        DateTime
  time        String
  guests      Int
  notes       String?
  status      ReservationStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  confirmedAt DateTime?
}
